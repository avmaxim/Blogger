<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <display-name>Flogger</display-name>
    <description> A blog for cool guys </description>

    <welcome-file-list>
        <welcome-file>/views/index.jsp</welcome-file>
    </welcome-file-list>

    <resource-ref>
        <description> Flogger Database 1.0</description>
        <res-ref-name>jdbc/booksdb</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
        <res-sharing-scope>Shareable</res-sharing-scope>
    </resource-ref>

    <context-param>
        <param-name>db_url</param-name>
        <param-value>jdbc:mysql://localhost/mysql_db</param-value>
    </context-param>
    <context-param>
        <param-name>db_username</param-name>
        <param-value>mysql_username</param-value>
    </context-param>
    <context-param>
        <param-name>db_password</param-name>
        <param-value>mysql_password</param-value>
    </context-param>
</web-app>